<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_wallpaper"
    tools:context=".OnlineGameplayActivity">


    <TextView
        android:id="@+id/currentTurn_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Player1 Turn"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />




    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="22dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentTurn_textView"
        app:layout_constraintVertical_bias="0.5">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/column1_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginBottom="72dp"
                android:text="1"
                android:textSize="32sp"
                app:cornerRadius="48dp" />

            <ImageView
                android:id="@+id/row1_col1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

            <ImageView
                android:id="@+id/row2_col1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

            <ImageView
                android:id="@+id/row3_col1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

            <ImageView
                android:id="@+id/row4_col1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/column2_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginBottom="72dp"
                android:text="2"
                android:textSize="32sp"
                app:cornerRadius="48dp" />

            <ImageView
                android:id="@+id/row1_col2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

            <ImageView
                android:id="@+id/row2_col2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

            <ImageView
                android:id="@+id/row3_col2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

            <ImageView
                android:id="@+id/row4_col2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/column3_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginBottom="72dp"
                android:text="3"
                android:textSize="32sp"
                app:cornerRadius="48dp" />

            <ImageView
                android:id="@+id/row1_col3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

            <ImageView
                android:id="@+id/row2_col3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

            <ImageView
                android:id="@+id/row3_col3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

            <ImageView
                android:id="@+id/row4_col3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/column4_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginBottom="72dp"
                android:text="4"
                android:textSize="32sp"
                app:cornerRadius="48dp" />


            <ImageView
                android:id="@+id/row1_col4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

            <ImageView
                android:id="@+id/row2_col4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

            <ImageView
                android:id="@+id/row3_col4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

            <ImageView
                android:id="@+id/row4_col4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/yellowstar" />

        </LinearLayout>


    </LinearLayout>





    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
        app:layout_constraintVertical_bias="0.5">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/newGame_button"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/rounded_button"
            android:text="New Game"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="777dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/quit_button"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@drawable/rounded_button"
            android:text="Quit"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="-4dp"
            tools:layout_editor_absoluteY="689dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>